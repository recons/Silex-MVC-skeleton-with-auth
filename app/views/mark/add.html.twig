{% extends "layout.html.twig" %}

{% block page_title %}Добавить оценку{% endblock %}

{% block page_content %}
    <div class="row">
        <div class="col-md-12 col-sm-12 col-xs-12">
            <div class="x_panel" style="height:600px;">
                <div class="x_title">
                    <h2>Добавить оценку</h2>
                    <div class="clearfix"></div>
                </div>
                <div class="x_content">
                    {{ form_start(form, {'attr': {'class': 'form-horizontal form-label-left'}}) }}
                        <div class="form-group">
                            {{ form_label(form.student, null, {
                                'label_attr': {'class': 'control-label col-md-3 col-sm-3 col-xs-12'}
                            }) }}
                            <div class="col-md-6 col-sm-6 col-xs-12">
                                {{ form_widget(form.student) }}
                            </div>
                        </div>
                        <div class="form-group">
                            {{ form_label(form.subject, null, {
                                'label_attr': {'class': 'control-label col-md-3 col-sm-3 col-xs-12'}
                            }) }}
                            <div class="col-md-6 col-sm-6 col-xs-12">
                                {{ form_widget(form.subject) }}
                            </div>
                        </div>
                        <div class="form-group">
                            {{ form_label(form.teacher, null, {
                                'label_attr': {'class': 'control-label col-md-3 col-sm-3 col-xs-12'}
                            }) }}
                            <div class="col-md-6 col-sm-6 col-xs-12">
                                {{ form_widget(form.teacher) }}
                            </div>
                        </div>
                        <div class="form-group">
                            {{ form_label(form.value, null, {
                                'label_attr': {'class': 'control-label col-md-3 col-sm-3 col-xs-12'}
                            }) }}
                            <div class="col-md-6 col-sm-6 col-xs-12">
                                {{ form_widget(form.value) }}
                            </div>
                        </div>
                        <div class="ln_solid"></div>
                        <div class="col-md-6 col-sm-6 col-xs-12 col-md-offset-3">
                            <button type="submit" class="btn btn-success">Сохранить</button>
                        </div>
                    {{ form_end(form) }}
                </div>
            </div>
        </div>
    </div>
    <!-- /page content -->
{% endblock %}