{% extends "layout.html.twig" %}

{% block page_title %}Изменить информацию о человеке{% endblock %}

{% block page_content %}
    <div class="row">
        <div class="col-md-12 col-sm-12 col-xs-12">
            <div class="x_panel" style="height:600px;">
                <div class="x_title">
                    <h2>Изменить информацию о {{ human.firstname }} {{ human.lastname }}</h2>
                    <div class="clearfix"></div>
                </div>
                <div class="x_content">
                    {{ form_start(form, {'attr': {'class': 'form-horizontal form-label-left'}}) }}
                    <div class="form-group">
                        {{ form_label(form.firstname, null, {
                            'label_attr': {'class': 'control-label col-md-3 col-sm-3 col-xs-12'}
                        }) }}
                        <div class="col-md-6 col-sm-6 col-xs-12">
                            {{ form_widget(form.firstname) }}
                        </div>
                    </div>
                    <div class="form-group">
                        {{ form_label(form.lastname, null, {
                            'label_attr': {'class': 'control-label col-md-3 col-sm-3 col-xs-12'}
                        }) }}
                        <div class="col-md-6 col-sm-6 col-xs-12">
                            {{ form_widget(form.lastname) }}
                        </div>
                    </div>
                    <div class="form-group">
                        {{ form_label(form.pathername, null, {
                            'label_attr': {'class': 'control-label col-md-3 col-sm-3 col-xs-12'}
                        }) }}
                        <div class="col-md-6 col-sm-6 col-xs-12">
                            {{ form_widget(form.pathername) }}
                        </div>
                    </div>
                    <div class="form-group">
                        {{ form_label(form.group, null, {
                            'label_attr': {'class': 'control-label col-md-3 col-sm-3 col-xs-12'}
                        }) }}
                        <div class="col-md-6 col-sm-6 col-xs-12">
                            {{ form_widget(form.group) }}
                        </div>
                    </div>
                    <div class="form-group">
                        {{ form_label(form.type, null, {
                            'label_attr': {'class': 'control-label col-md-3 col-sm-3 col-xs-12'}
                        }) }}
                        <div class="col-md-6 col-sm-6 col-xs-12">
                            {% for i in 0..form.type|length-1 %}
                                <div class="radio">
                                    <label>
                                        {{ form_widget(form.type[i]) }}
                                        {{ form.type[i].vars.label }}
                                    </label>
                                </div>
                            {% endfor %}
                        </div>
                    </div>
                    <div class="ln_solid"></div>
                    <div class="col-md-6 col-sm-6 col-xs-12 col-md-offset-3">
                        <button type="submit" class="btn btn-success">Сохранить</button>
                    </div>
                    {{ form_end(form) }}
                </div>
            </div>
        </div>
    </div>
    <!-- /page content -->
{% endblock %}